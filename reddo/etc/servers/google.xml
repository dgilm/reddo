<?xml version="1.0" encoding="UTF-8" ?>

<server name="google" description="Google Language Tools"
        url="http://translate.google.com/translate_t"
        random="yes">

  <input name="text" />
  <output tag="textarea" pos="1" regexp="(.*)" />

  <langpairs>

  <langpair id="en-de" description="English-German">
    <params>
      <param name="langpair" value="en|de" />
      <param name="hl" value="en" />
    </params>
  </langpair>
  
